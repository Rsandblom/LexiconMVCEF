@model LexiconMVCData.Models.Person

<div class="row mb-2 mr-sm-2">
    <div class="col-1"> @Html.DisplayFor(model => model.Id)</div>
    <div class="col-3"> @Html.DisplayFor(model => model.Name)</div>
    <div class="col-3">@Html.DisplayFor(model => model.PhoneNumber)</div>
    <div class="col-3">@Html.DisplayFor(model => model.City)</div>
    <div class="col-2">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <input type="submit" value="Delete" asp-controller="People" asp-action="Delete" asp-route-id="@Model.Id" />
        </form>
    </div>
</div>

